int IntToBitColumn(int zahl, int * array) {
   int n;
   int ziffern[5];
   int i=0;
   while (zahl>0) {
     ziffern[i]= zahl % 10;
     zahl = zahl / 10;
     i++;
   }
   n= 8*i;
   array= malloc(n);
   int ax=0;
   for(int z=i; z>=0; z--) {
    for(int col=0; col<8; col++ ) {
      array[ax++]= font[ziffern[z],col];
    }
   }
   return(n);
}

